@model TribalSvcPortal.ViewModels.HomeViewModels.InitializeViewModel
@{
    ViewData["Title"] = "Initialize";
    ViewData["SubTitle"] = "Use this page to create the initial portal administrator account.";
}


<div class="form-group">
    <div class="col-md-12">
        <section class="panel panel-default">
            <header class="panel-heading font-bold">Portal Admin Account Details</header>
            <div class="panel-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email</label>
                                <input asp-for="Email" class="form-control" />
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Password</label>
                                <input asp-for="Password" class="form-control" />
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                        </div>
                    </div>
                    <p>
                        <button type="submit" class="btn btn-sm btn-primary">Initialize</button>
                    </p>
                }

            </div>
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
