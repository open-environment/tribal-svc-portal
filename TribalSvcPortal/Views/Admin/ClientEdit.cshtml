@model T_PRT_CLIENTS
@{
    ViewData["Title"] = "Client Edit";
    ViewData["SubTitle"] = "Edit details about a client application";
}

<!-- START: MAIN CONTENT -->
<section class="panel panel-default">
    <header class="panel-heading">Client Details</header>
    <div class="panel-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            if (Model != null)
            {
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Client ID</label>
                            @Html.TextBoxFor(model => model.CLIENT_ID, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CLIENT_ID)
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Client Name</label>
                            @Html.TextBoxFor(model => model.CLIENT_NAME, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CLIENT_NAME)
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Grant Type</label>
                            @Html.TextBoxFor(model => model.CLIENT_GRANT_TYPE, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CLIENT_GRANT_TYPE)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Client URL</label>
                            @Html.TextBoxFor(model => model.CLIENT_URL, new { @class = "form-control", @placeholder = "URL of client application" })
                            @Html.ValidationMessageFor(model => model.CLIENT_URL)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Redirect URI</label>
                            @Html.TextBoxFor(model => model.CLIENT_REDIRECT_URI, new { @class = "form-control", @placeholder = "URI used for OIDC callback" })
                            @Html.ValidationMessageFor(model => model.CLIENT_REDIRECT_URI)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Post Logout URI</label>
                            @Html.TextBoxFor(model => model.CLIENT_POST_LOGOUT_URI, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CLIENT_POST_LOGOUT_URI)
                        </div>
                    </div>
                </div>
            }

            <p>
                <button type="submit" class="btn btn-primary">Save</button>
                <a class=" btn btn-warning" href="@Url.Action("ClientList" )">Back to List</a>
            </p>
        }

    </div>
</section>

