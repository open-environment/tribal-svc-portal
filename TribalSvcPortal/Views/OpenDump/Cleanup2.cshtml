@section Scripts {
    <script src="~/js/confirm_delete.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {


            //display total on page ready
            CalcTotal();

            function CalcTotal() {
                var _tot = 0;
                $(".subtot").each(function () {
                    _tot += parseFloat(this.value);
                });
                $("#tot").text("$ " + _tot.toFixed(2));
            }



            //create an event when button is clicked to display modal
            $(".modal-it").click(function () {
                $('#edit_restore_idx').val($(this).parent('td').find('#item_DUMP_ASSESSMENT_RESTORE_IDX').val());
                $('#newRestoreActivity').val($(this).parent('td').find('#item_RESTORE_ACTIVITY').val());
                $('#newRestoreAmt').val($(this).parent('td').find('#item_RESTORE_COST').val());
            });

            $(".add-it").click(function () {
                $('#edit_restore_idx').val(null);
                $('#newRestoreActivity').val('');
                $('#newRestoreAmt').val('');
            });
        });
    </script>
}