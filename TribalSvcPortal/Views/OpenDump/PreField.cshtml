                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Site Setting</label>
                                                        @Html.DropDownListFor(model => model.TOdSites.SITE_SETTING_IDX, Model.SiteSettingsList, "", new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="col-md-5">
                                                    <div class="form-group">
                                                        <label>Distance to Homes</label>
                                                        @Html.DropDownListFor(model => model.TOdSites.PF_HOMES_DIST, Model.HomesList, "", new { @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Vertical Dist. to DW Aquifer</label>
                                                        @Html.DropDownListFor(model => model.TOdSites.PF_AQUIFER_VERT_DIST, Model.AquiferList, "", new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="col-md-5">
                                                    <div class="form-group">
                                                        <label>Horiz Dist. to SW Bodies</label>
                                                        @Html.DropDownListFor(model => model.TOdSites.PF_SURF_WATER_HORIZ_DIST, Model.SurfaceWaterList, "", new { @class = "form-control" })
                                                    </div>
