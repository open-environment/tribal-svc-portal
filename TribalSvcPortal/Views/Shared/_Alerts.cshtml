<script type="text/javascript">
    $(function () {

        var timeout = 5000;
        @if (TempData["toastrTimeout"] != null)
        {
            <text>
            timeout = 0;
            </text>
        }

        // use toastr to display the alerts
        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-top-right",
            "timeOut" : timeout
        }

        @if (TempData["Error"] != null)
        {
            <text>
            toastr.warning("@TempData["Error"]");
            </text>
        }

        @if (TempData["Success"] != null)
        {
            <text>
            toastr.success("@TempData["Success"]");
            </text>
        }
    });
</script>
