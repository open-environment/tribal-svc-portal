<script type="text/javascript">
    $(function () {
        // toastr alerts
        var timeout = 5000;
        @if (TempData["toastrTimeout"] != null)
        {
            <text>
        timeout = TempData["toastrTimeout"];
            </text>
        }

        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-top-right",
            "timeOut" : timeout
        }

        @if (TempData["Error"] != null)
        {
            <text>
            toastr.warning("@TempData["Error"]");
            </text>
        }
        else if (TempData["Success"] != null)
        {
            <text>
            toastr.success("@TempData["Success"]");
            </text>
        }
    });
</script>